<div class="container">
  <div class="row">
    <div class="col-lg-4 col-md-6 ml-auto mr-auto">
      <div class="card card-login">
        <div class="card-header card-header-info text-center">
          <h4 class="card-title">Add new timeslot to weekly availability schedule</h4>
        </div>
        <div class="card-body">
          <%= form_with model: @sport, class: "nifty_form" do |f| %>
            <div class="field">
            <%= f.label :sport %><br />
            <%= f.text_field :sport, autocomplete: "Sport"%>
            </div>


            </div>
            <div class="footer center">
              <%= f.submit "Add to Schedule" , class: "btn btn-info"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>